{
  "pluginAlias": "HomebridgeTapoSmarthome",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "default": "Tapo Smart Home"
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "password": {
        "type": "string"
      },
      "addresses": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["IP", "MAC"]
            }
          },
          "required": ["value", "type"]
        }
      }
    },
    "required": ["platform", "name", "email", "password", "addresses"]
  }
}
